---
import SocialPills from "./SocialPills.astro";

import FacebookIcon from "../assets/icons/Facebook.astro";
import InstagramIcon from "../assets/icons/Instagram.astro";
---

<footer 
class="w-full z-[999] bg-gray-300/10 backdrop-blur-3xl md:bg-gray-600/10 md:backdrop-blur-5xl"
>
    <div 
    class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between space-y-3"
    >
        <!-- Derechos -->
        <span 
        class="flex justify-center text-sm text-black sm:text-center dark:text-white mb-0"
        >
        © 2023 
        <a 
        href="https://flowbite.com/" 
        class="hover:underline"
        >
        Flowbite™
        </a>
        . All Rights Reserved.
        </span>

        <!-- Redes Sociales -->
        <ul 
        class="flex flex-wrap items-center justify-center my-3 text-sm font-medium text-black dark:text-gray-700 gap-x-2 md:my-0"
        >
            <SocialPills
            href="https://www.facebook.com/palo.meque.56/"
            >
                <FacebookIcon/>
            </SocialPills>
            <SocialPills
            
            href="https://www.instagram.com/savepalomeque/">
                <InstagramIcon/>
            </SocialPills>
        </ul>

        <!-- Menú -->
        <ul 
        class="flex flex-wrap justify-center items-center mt-3 text-sm font-medium text-black dark:text-white sm:mt-0"
        >
            <li>
                <a href="#top" class="me-4 md:me-6">Inicio</a>
            </li>
            <li>
                <a href="#experiencia" class="me-4 md:me-6">Experiencia</a>
            </li>
            <li>
                <a href="#proyectos" class="me-4 md:me-6">Proyectos</a>
            </li>
            <li>
                <a href="#contacto" class="">Contacto</a>
            </li>
        </ul>
    </div>
    
</footer>